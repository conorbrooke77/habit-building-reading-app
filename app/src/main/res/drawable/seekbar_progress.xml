<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non-Progress Part -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FEAA8F" />
            <corners android:radius="2dp" />
            <size android:height="1dp"/> <!-- Specify the height of the progress part -->
        </shape>
    </item>
    <!-- Progress Part -->
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="#FF602E" />
                <corners android:radius="2dp" />
                <size android:height="30dp"/> <!-- Specify the height of the progress part -->
            </shape>
        </scale>
    </item>
</layer-list>
